{
    "name": "@warkypublic/monorepo-dep-checker",
    "version": "1.0.0",
    "description": "A CLI tool to check and manage dependencies across packages in a monorepo",
    "type": "module",
    "main": "./dist/index.js",
    "bin": {
        "dep-check": "./bin/dep-check.js"
    },
    "publishConfig": {
        "access": "public"
    },
    "files": [
